---
import BaseLayout from '../layouts/BaseLayout.astro';
import PolicyExplorer from '../components/PolicyExplorer';
import { policyCards } from '../utils/data';

/* policies page: all cards, Anhui first */
const sorted = [...policyCards].sort((a, b) => {
  if (a.province === 'anhui' && b.province !== 'anhui') return -1;
  if (b.province === 'anhui' && a.province !== 'anhui') return 1;
  return 0;
});
---

<BaseLayout title="政策项目库">
  <h1 class="text-2xl font-bold mb-2">政策项目库</h1>
  <p class="text-gray-600 mb-6">
    全站政策项目检索。支持按类别、身份、费用、层级、状态等维度筛选和排序。
  </p>
  <PolicyExplorer
    client:load
    cards={sorted}
    showTimeline={false}
    extendedMode={true}
  />
</BaseLayout>
